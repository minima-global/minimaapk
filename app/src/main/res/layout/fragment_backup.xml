<!--    tools:context=".ui.home.HomeFragment">-->

    <TextView
        android:id="@+id/text_backup"
        android:text="@string/minima_backup"
        android:background="@drawable/white_box"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/backup_makebackup"
        android:text=" Make a Backup "
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/coreGrey5"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_restore"
        android:text="@string/minima_restore"
        android:background="@drawable/white_box"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/backup_restore"
        android:text=" Restore from a Backup "
        android:layout_marginTop="8dp"
        android:textColor="@color/coreGrey5"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_archive"
        android:text="@string/minima_restore"
        android:background="@drawable/white_box"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/backup_archive"
        android:text=" Restore from an Archive Node "
        android:layout_marginTop="8dp"
        android:textColor="@color/coreGrey5"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

</ScrollView>