<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/network_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MinimaActionBar"
            android:theme="@style/MinimaActionBar.DrawerIconColour"
            app:title="Network Peers" />

        <LinearLayout   android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/main_background"
                        android:padding="8dp"
                        android:orientation="vertical">

                <TextView
                    android:background="@drawable/white_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/minima_network_info"/>

                <EditText
                    android:id="@+id/peers_input"
                    android:background="@drawable/white_box"
                    android:hint="Enter peers list here.."
                    android:layout_marginTop="16dp"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>

                <Button
                    android:id="@+id/peers_enter"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Import Peers"/>

        </LinearLayout>

</LinearLayout>