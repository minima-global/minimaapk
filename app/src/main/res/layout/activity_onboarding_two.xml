<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16181C"
    android:padding="25dp">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:progress="30"
        android:max="100"
        android:secondaryProgress="0"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_bar"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
        android:text="Getting started"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:paddingTop="19dp"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:fontFamily="@font/manrope_bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar" />

    <TextView
        android:text="1. Security"
        android:id="@+id/get_started_one"
        android:textColor="#000"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp"
        app:layout_constraintTop_toBottomOf="@id/title"
    />

    <TextView
        android:text="2. Node generation"
        android:id="@+id/get_started_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0.6"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/get_started_one"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:text="3. Backup"
        android:id="@+id/get_started_three"
        android:textColor="#000"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp"
        app:layout_constraintTop_toBottomOf="@+id/get_started_two"
        android:alpha="0.6"
    />

    <TextView
        android:text="Setup will take 5-10 minutes, please make sure blah blah. You should be in a private space."
        android:id="@+id/text_one"
        android:textColor="#FFF"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/get_started_three" />

    <TextView
        android:text="You may want to grab a pen and pencil as you will need to take note of your Seed Phrase."
        android:id="@+id/text_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="#FFF"
        app:layout_constraintTop_toBottomOf="@+id/text_one"
        tools:layout_editor_absoluteX="25dp" />

    <Button
        android:text="@string/begin_setup"
        android:id="@+id/get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:textAllCaps="false"
        android:fontFamily="@font/manrope_bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>